<% layout('../layout') %>


<div class="container pt-2">

    <div class="row">
        <% if(products.length >0)for(let i = 0; i< products.length; i++){%>
           <div class="col-md-3 product-item mt-3  ">
               <a href="<%= '/product/'+products[i]._id%>">
                   <div class="img-thumbnail img">
                       <img  class="w-100 " src="<%= products[i].image[0]%>">

                       <div class="caption">
                           <h3><%= products[i].name%></h3>
                           <div class="justify-content-between">
                               <p class="price"><%= products[i].price%>$</p>
                           </div>
                       </div>
                   </div>

               </a>
           </div>
        <%}%>

    </div>


</div>