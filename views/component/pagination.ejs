
<nav class="row justify-content-center">
    <ul class="pagination" >
        <li class="page-item  <%= currentpage >= 1?"":'disabled'%>" >
            <a class="page-link" href="?page=<%= currentpage >= 1?currentpage-1:currentpage%>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <%for(let i=0;i<pages;i++){%>
            <li class="page-item <%= i==currentpage?'disabled':""%> "><a class="page-link" href="?page=<%=i%>"><%=i+1%></a></li>
        <%}%>
        <li class="page-item <%= (1+(+currentpage)) == pages? 'disabled': ""%>">
            <a class="page-link" href="?page=<%= (1+(+currentpage))< pages?(1+(+currentpage)):currentpage%>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>