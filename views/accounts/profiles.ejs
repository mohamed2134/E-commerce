<% layout('../layout') %>




<div class="container">
    <div class="row profile flex-row  flex-wrap  ">
        <div class="col-md-3 my-2">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic ">
                    <img src=" <%= user.profile.picture%>" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        <%= user.profile.name%>
                    </div>
                </div>


                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav flex-column align-items-center  p-lg-3">
                        <li>
                            <p><%= user.email%></p>
                        </li>
                        <li>
                            <p><%= user.address.address%></p>
                        </li>
                        <li>
                            <a href="/edit-profile">
                                <i class="glyphicon glyphicon-user"></i>
                                Account Settings </a>
                        </li>

                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-8">
            <div class="profile-content">
                Some user related content goes here...
            </div>
        </div>
    </div>
</div>



