<% layout('../layout') %>



<div class="container mt-5">

    <div class="row mt-2">
    <div class="table-responsive cart_info">
        <table class="table table-condensed w-100">
            <thead>
            <tr class="cart_menu">
                <td class="image">Item</td>
                <td class="description"></td>
                <td class="price">Price</td>
                <td class="quantity">Quantity</td>
                <td class="total">Total</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            <% for(let i=0; i< order.items.length;i++){%>
                <tr>
                    <td class="cart_product">
                        <a href="product/<%= order.items[i].item._id%>"><img src="<%= order.items[i].item.image[0]%>" alt=""></a>
                    </td>
                    <td class="cart_description">
                        <h4><a href="product/<%= order.items[i].item._id%>"> <%= order.items[i].item.name%> </a></h4>
                        <p>Web ID: 1089772</p>
                    </td>
                    <td class="cart_price">
                        <p><%= order.items[i].item.price%></p>
                    </td>
                    <td class="cart_quantity">
                        <div class="cart_quantity_button">
                            <input  readonly class="cart_quantity_input" type="number" name="quantity" value="<%= order.items[i].quantity%>" autocomplete="off" size="2">
                        </div>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price"><%= order.items[i].price%></p>
                    </td>
                    <td class="cart_delete">
                        <a class="cart_quantity_delete" href="/cart-remove/<%=i%>"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</div>

    <div class="row justify-content-center mt-3">
        <a  style="color: black;" href="/order/cancel/<%=order._id%>"> Cancel Order</a>
    </div>
</div>