<% layout('../layout') %>


<section class="container cart-list">
<div class="table-responsive cart_info">
    <table class="table table-condensed w-100">
        <thead>
        <tr class="cart_menu">
            <td class="image">Item</td>
            <td class="description"></td>
            <td class="price">Price</td>
            <td class="quantity">Quantity</td>
            <td class="total">Total</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        <% for(let i=0; i< cart.items.length;i++){%>
        <tr>
            <td class="cart_product">
                <a href="product/<%= cart.items[i].item._id%>"><img src="<%= cart.items[i].item.image[0]%>" alt=""></a>
            </td>
            <td class="cart_description">
                <h4><a href="product/<%= cart.items[i].item._id%>"> <%= cart.items[i].item.name%> </a></h4>
                <p>Web ID: 1089772</p>
            </td>
            <td class="cart_price">
                <p><%= cart.items[i].item.price%></p>
            </td>
            <td class="cart_quantity">
                <div class="cart_quantity_button">
                    <input class="cart_quantity_input" type="number" name="quantity" value="<%= cart.items[i].quantity%>" autocomplete="off" size="2">
                </div>
            </td>
            <td class="cart_total">
                <p class="cart_total_price"><%= cart.items[i].price%></p>
            </td>
            <td class="cart_delete">
                <a class="cart_quantity_delete" href="/cart-remove/<%=i%>"><i class="fa fa-times"></i></a>
            </td>
        </tr>
        <%}%>
        </tbody>
    </table>
</div>
</section>

<section class="container">
    <div class="col-sm-6">
        <div class="total_area">
            <ul>
                <li >Cart Total Price <span style="color: darkred"><%= cart.total %> $</span></li>
                <li >Shipping Cost <span style="color: #1c7430">Free</span></li>
                <li style="color: #28a745;font-size: 20px;"> your order will reach you in 5 days from your checkout date </li>
            </ul>
            <a class="btn btn-default update" href="">Update</a>
            <a class="btn btn-default check_out" href="">Check Out</a>
        </div>
    </div>
</section>